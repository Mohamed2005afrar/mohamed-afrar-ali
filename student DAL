using System;
using System.Collections;
class Student
{
    public string StudentName { get; set; }
    public int StudentID { get; set; }
    public double Marks { get; set; }
    public Student(string name, int id, double marks)
    {
        StudentName = name;
        StudentID = id;
        Marks = marks;
    }
}
class StudentDAL
{
    private ArrayList students = new ArrayList();
    public bool AddStudent(Student s)
    {
        if (s == null)
            return false;
        students.Add(s);
        return true;
    }
    public bool DeleteStudent(int id)
    {
        foreach (Student s in students)
        {
            if (s.StudentID == id)
            {
                students.Remove(s);
                return true;
            }
        }
        return false;
    }
    public double SearchStudent(int id)
    {
        foreach (Student s in students)
        {
            if (s.StudentID == id)
                return s.Marks;
        }
        return -1;
    }
    public Student[] GetAllStudents()
    {
        Student[] arr = new Student[students.Count];
        students.CopyTo(arr);
        return arr;
    }
}
class Program
{
    static void Main()
    {
        StudentDAL dal = new StudentDAL();
        dal.AddStudent(new Student("Aman", 1, 88.5));
        dal.AddStudent(new Student("Neha", 2, 92));
        dal.AddStudent(new Student("Ravi", 3, 76));
        Console.WriteLine("Marks of student ID 2: " + dal.SearchStudent(2));
        dal.DeleteStudent(1);
        Console.WriteLine("\nAll Students:");
        foreach (Student s in dal.GetAllStudents())
        {
            Console.WriteLine($"{s.StudentID}  {s.StudentName}  {s.Marks}");
        }
    }
}

